{% macro codeExample( title, description='' ) %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">{{ title }}</h2>
        </div>
        <div class="panel-body">
            {{ caller() }}
            <pre>{{ caller() | escape }}</pre>
        </div>
    </div>
{% endmacro %}